@model IEnumerable<HomeworkCustomer.Models.Customer_Test_View>

@{
    ViewBag.Title = "Report";
}

<h2>Report</h2>
<div>
    <div class="pull-left">
        @using (Html.BeginForm("Report", "Home", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.TextBox(
                    "SearchString",
                    null,
                    new { @class = "form-control" }
                )
                <input type="submit" value="查詢" placeholder="姓名" class="btn btn-default" />
            </div>
        }
    </div>
    <div class="pull-right">
        @using (Html.BeginForm("GetReport", "Home", FormMethod.Post))
        {
            <input type="submit" value="產生報表" class="btn btn-default" />
        }
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行數)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人數)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.客戶名稱)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.客戶銀行數)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.客戶聯絡人數)
    </td>
</tr>
}

</table>
