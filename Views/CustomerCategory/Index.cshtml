@model IEnumerable<HomeworkCustomer.Models.客戶分類>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    @using (Html.BeginForm("Index", "CustomerCategory", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class="form-group">
            @Html.TextBox(
                "SearchString",
                null,
                new { @class = "form-control" }
            )
            <input type="submit" value="查詢" placeholder="姓名" class="btn btn-default" />
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶分類名稱)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶分類名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
